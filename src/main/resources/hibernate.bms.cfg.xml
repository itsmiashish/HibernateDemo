<?xml version='1.0' encoding='utf-8'?>
        <!DOCTYPE hibernate-configuration PUBLIC
                "-//Hibernate/Hibernate Configuration DTD//EN"
                "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

<!-- a SessionFactory instance listed as /jndi/name -->
<session-factory>

    <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/bms</property>
    <property name="connection.username">root</property>
    <property name="connection.password">root</property>
    <property name="hbm2ddl.auto">update</property>
    <!-- MySQL Dialect -->
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

    <!-- Optional settings -->
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
<mapping class="com.jspider.project.bms.Movie"/>
    <mapping class="com.jspider.project.bms.Audi"/>
    <mapping class="com.jspider.project.bms.Address"/>
    <mapping class="com.jspider.project.bms.MovieMeta"/>
    <mapping class="com.jspider.project.bms.AudiAddress"/>
    <mapping class="com.jspider.project.bms.Audi2"/>
    <mapping class="com.jspider.project.bms.Shows"/>
</session-factory>

</hibernate-configuration>